<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".MyActivity"
	>

	<android.support.v7.widget.Toolbar
		android:id="@+id/example.transition.header"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:transitionName="holder1"
		app:title="@string/title_activity_transition"
		style="@style/ToolBar.WithNavigationBack"
		/>

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/example.transition.header"
		android:layout_gravity="center"
		android:layout_margin="@dimen/spacing_small"
		app:cardCornerRadius="4dp"
		app:contentPadding="@dimen/spacing_medium"
		android:id="@+id/view"
		>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/transitions_activity2_help"
			android:lineSpacingExtra="4dp"

			/>
	</android.support.v7.widget.CardView>


	<include
		layout="@layout/view_card_image"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:layout_alignBottom="@+id/activity.reveal.fab"
		android:layout_alignStart="@+id/view"
		/>

	<include
		layout="@layout/view_card_image"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:layout_alignTop="@+id/view2"
		android:layout_alignStart="@+id/view"
		/>

	<include
		layout="@layout/view_card_image"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:layout_alignTop="@+id/view2"
		android:layout_alignStart="@+id/view"
		/>

	<include
		layout="@layout/view_card_image"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:layout_alignTop="@+id/view2"
		android:layout_alignEnd="@+id/view"
		/>

	<include
		layout="@layout/view_card_image"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:layout_alignTop="@+id/view2"
		android:layout_alignEnd="@+id/view"
		android:layout_centerVertical="true"
		android:layout_centerHorizontal="true"
		/>

	<include
		layout="@layout/view_card_image"
		android:id="@+id/view2"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:layout_centerVertical="true"
		android:layout_centerHorizontal="true"
		/>

	<android.support.design.widget.FloatingActionButton
		android:id="@+id/activity.reveal.fab"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="@dimen/activity_horizontal_margin"
		android:transitionName="fab"
		android:elevation="@dimen/elevation_medium"
		android:src="@drawable/ic_arrow_back_24dp"
		android:onClick="onFabCLick"
		app:fabSize="normal"
		/>
</RelativeLayout>
